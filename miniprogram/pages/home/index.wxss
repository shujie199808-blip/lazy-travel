.page {
  padding-bottom: 140rpx;
}

.hero {
  background: linear-gradient(135deg, #fff6eb, #ffffff);
  border-radius: 24rpx;
  padding: 36rpx;
  box-shadow: var(--shadow-card);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.eyebrow {
  font-size: 26rpx;
  color: #ff9d33;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.hero-title {
  font-size: 44rpx;
  line-height: 1.3;
  font-weight: 700;
  color: #1f1f1f;
}

.hero-subtitle {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

.hero-btn {
  margin-top: 8rpx;
  width: 100%;
  background: var(--color-primary);
  border-radius: 999rpx;
  box-shadow: 0 12rpx 24rpx rgba(255, 122, 0, 0.25);
}

.mood-tags {
  margin: 28rpx 0;
  white-space: nowrap;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 24rpx;
  background: #fff;
  border-radius: 999rpx;
  box-shadow: var(--shadow-card);
  font-size: 26rpx;
  color: #444;
  margin-right: 16rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #222;
}

.waterfall {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx 16rpx;
}

.dest-card {
  width: calc(50% - 8rpx);
  background: #fff;
  border-radius: 22rpx;
  box-shadow: var(--shadow-card);
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.cover {
  width: 100%;
  height: 180rpx;
  border-radius: 18rpx;
}

.dest-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  line-height: 1.4;
}

.dest-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.cta-fab {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 32rpx;
  background: var(--color-primary);
  color: #fff;
  text-align: center;
  padding: 22rpx 24rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 14rpx 26rpx rgba(255, 122, 0, 0.25);
}
