.page {
  padding: 40rpx 28rpx 180rpx;
  background: #fdfbf8;
  color: #1f1f1f;
}

.card {
  background: linear-gradient(135deg, #fff5e6, #ffffff);
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow: 0 20rpx 36rpx rgba(255, 167, 89, 0.12);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 18rpx;
  background: rgba(255, 153, 60, 0.14);
  color: #ff7a00;
  border-radius: 999rpx;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

.hero-title {
  font-size: 46rpx;
  font-weight: 800;
  line-height: 1.35;
  color: #191919;
}

.hero-subtitle {
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
}

.hero-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.hero-btn {
  background: var(--color-primary);
  color: #fff;
  border-radius: 999rpx;
  box-shadow: 0 16rpx 32rpx rgba(255, 122, 0, 0.28);
}

.hero-note {
  font-size: 24rpx;
  color: #777;
  line-height: 1.4;
}

.mood-tags {
  margin: 32rpx 0 14rpx;
  white-space: nowrap;
  display: flex;
  gap: 16rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 26rpx;
  background: #fff;
  border-radius: 999rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.04);
  font-size: 26rpx;
  color: #444;
}

.section-head {
  margin: 24rpx 0 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #242424;
}

.section-sub {
  font-size: 26rpx;
  color: #7a7a7a;
  margin-top: 6rpx;
}

.waterfall {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx 14rpx;
}

.dest-card {
  width: calc(50% - 7rpx);
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.06);
}

.cover {
  width: 100%;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  position: relative;
}

.cover-overlay {
  position: absolute;
  left: 16rpx;
  bottom: 14rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.cover-label {
  font-weight: 600;
}

.dest-text {
  padding: 18rpx 18rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.dest-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #191919;
  line-height: 1.4;
}

.dest-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.dest-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 2rpx;
}

.chip {
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: #f7f7f7;
  font-size: 22rpx;
  color: #555;
}

.chip.highlight {
  background: rgba(255, 122, 0, 0.12);
  color: #d55a00;
}

.cta-fab {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 32rpx;
  background: #fff;
  border-radius: 22rpx;
  padding: 18rpx 20rpx;
  box-shadow: 0 18rpx 36rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 14rpx;
}

.cta-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.cta-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.cta-sub {
  font-size: 24rpx;
  color: #666;
}

.cta-btn {
  background: var(--color-primary);
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 24rpx rgba(255, 122, 0, 0.22);
  white-space: nowrap;
}
